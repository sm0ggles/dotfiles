	padding-left       = 2
	padding-right      = 1
	module-margin-left = 1

	font-N = <fontconfig pattern>;<vertical offset>
	font-0 = WunconSiji:size=4;2
	font-1 = lemon:pixelsize=8;2
	font-2 = lemon:pixelsize=8;2

	modules-left   = music spotify
	modules-center = i3
	modules-right  = volume temperature essid cpu battery date

	tray-position = tray-padding = 2
	tray-transparent = false

	fixed-center = true
	override-redirect = false
