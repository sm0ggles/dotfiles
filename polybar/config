[module/network]
	type          = internal/network
	interface     = wlp3s0
	ping-interval = 3

[module/xwindow]
	y-offset      = 10
	type          = internal/xwindow
	format        = <label>
	label         = %title:0:50:%
	label-padding = 1

[module/date]
	type     = internal/date
	interval = 1.0
	date     =
	date-alt =  [ %a %d, %b |
	time     = " %d %a %H:%M "
	time-alt = %H:%M:%S ]
	label    = %date% %time%

	format         = <label>
	format-padding = 0

	format-prefix            = 
	format-prefix-background = ${colors.prefix_bg}
	format-prefix-foreground = ${colors.magenta}
	format-prefix-padding    = 1

	label-background = ${colors.magenta}
	label-foreground = ${colors.module_fg}
	label-padding    = 0

[module/music]
	type = internal/mpd

	host = 127.0.0.1
	port = 6600

	interval = 2

	format-online = <icon-prev><label-song>

	label-song         = %title% - %artist%
	label-song-padding = 1

	label                 = "%output:0:45:...%"
	label-song-background = ${xrdb:color9}
	label-song-foreground = ${colors.prefix_bg}
	label-padding-right   = 1

	icon-prev            = 
	icon-prev-background = ${colors.prefix_bg}
	icon-prev-foreground = ${colors.red2}
	icon-prev-padding    = 1

	format-online-prefix-padding = 1

	click-left   = playerctl previous
	click-middle = playerctl play-pause
	click-right  = playerctl next

